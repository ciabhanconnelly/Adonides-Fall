                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="helpButton"
                android:text="?" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonAltruistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="99"
                android:onClick="buttonPress"
                android:text="Altruistic" />

            <Button
                android:id="@+id/helpIdeasAltruistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="helpButton"
                android:text="?" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonEgoist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="99"
                android:onClick="buttonPress"
                android:text="Egoist" />

            <Button
                android:id="@+id/helpIdeasEgoist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="helpButton"
                android:text="?" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonTrusting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="99"
                android:onClick="buttonPress"
                android:text="Trusting" />

            <Button
                android:id="@+id/helpIdeasTrusting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="helpButton"
                android:text="?" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/ideasTitle"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:text="Ideas"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />
</androidx.constraintlayout.widget.ConstraintLayout>